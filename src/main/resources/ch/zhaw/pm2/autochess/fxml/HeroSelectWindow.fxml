<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="ch.zhaw.pm2.autochess.HeroSelectController" alignment="center"
          hgap="10" vgap="10" fx:id="mainGrid" gridLinesVisible="false">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" maxWidth="200" minWidth="200" prefWidth="200" />
        <ColumnConstraints hgrow="NEVER" maxWidth="200" minWidth="200" prefWidth="200" />
        <ColumnConstraints hgrow="NEVER" maxWidth="200" minWidth="200" prefWidth="200" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="400" minHeight="400" prefHeight="400" vgrow="NEVER" fx:id="heroRow"/>
        <RowConstraints maxHeight="50" minHeight="50" prefHeight="50" vgrow="NEVER" fx:id="buttonRow"/>
    </rowConstraints>
</GridPane>